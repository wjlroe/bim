{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "group": "build",
      "problemMatcher": "$rustc"
    },
    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo",
      "args": [
        "run"
      ],
      "problemMatcher": "$rustc"
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo",
      "args": [
        "test"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "cargo clean",
      "type": "shell",
      "command": "cargo",
      "args": [
        "clean"
      ]
    }
  ]
}
