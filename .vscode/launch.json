{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "xbim (debug)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "environment": [
        {
          "name": "RUST_BACKTRACE",
          "value": "1"
        }
      ],
      "externalConsole": false,
      "preLaunchTask": "cargo build",
      "program": "${workspaceRoot}/target/debug/bim",
      "args": [
        "--no-quit-warning",
        "-O",
        "testfiles/test.rb",
        "testfiles/kilo-dos2.c"
      ],
      "stopAtEntry": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "osx": {
        "type": "lldb",
        "target": "${workspaceRoot}/target/debug/bim"
      },
      "windows": {
        "type": "cppvsdbg"
      }
    },
    {
      "name": "xbim (release)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "cargo build release",
      "program": "${workspaceRoot}/target/release/bim",
      "args": [
        "testfiles/kilo-dos2.c"
      ],
      "stopAtEntry": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "osx": {
        "type": "lldb",
        "target": "${workspaceRoot}/target/release/bim"
      },
      "windows": {
        "type": "cppvsdbg"
      }
    },
    {
      "name": "bim",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/bim.exe",
      "args": [
        "-nw",
        "kilo-dos2.c"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true
    }
  ]
}
